<h1>Apply for an Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidlines for Advertisement</p>
    <ul>
      <li>Ad can not be misleading</li>
      <li>First come first serve: We will not display competing ads</li>
      <li>Price of item must be displayed</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, rows: 7, class: 'form-control', placeholder: "Enter a copy of the advertisement benefits" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_area :price, class: 'form-control', placeholder: "$0.00" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
